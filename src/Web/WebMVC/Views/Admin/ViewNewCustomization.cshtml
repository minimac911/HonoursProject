<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="Customizations">Back</a>
                        </li>
                        <li class="nav-item">
                            <h2 class="ml-3">
                                Create Customization
                            </h2>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="CreateCustomization">
                        <div class="card-text">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <input type="text" class="form-control" id="description" name="description" placeholder="Enter Description">
                            </div>
                            <div class="form-group">
                                <label for="service">Service Name</label>
                                <input type="text" class="form-control" id="service" name="service" placeholder="Enter Service Name">
                            </div>
                            <div class="form-group">
                                <label for="controller">Controller Name</label>
                                <input type="text" class="form-control" id="controller" name="controller" placeholder="Enter Controller Name">
                            </div>
                            <div class="form-group">
                                <label for="method">Action Name</label>
                                <input type="text" class="form-control" id="method" name="method" placeholder="Enter Action Name">
                            </div>
                            <div class="form-group">
                                <label for="endPoint">Service End Point</label>
                                <input type="text" class="form-control" id="endPoint" name="endPoint" placeholder="Enter Service End Point">
                            </div>
                            <!-- Button trigger modal -->
                            <button type="submit" class="btn btn-primary">
                                Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>