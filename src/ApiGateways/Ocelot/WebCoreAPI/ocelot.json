{
  "Routes": [
    // Catalog -------------------------------------------------
    {
      "DownstreamPathTemplate": "/api/catalog",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/apigateway/catalog",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/catalog/{itemId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/apigateway/catalog/{itemId}",
      "UpstreamHttpMethod": [ "GET", "PUT" ]
    },
    // CART ----------------------------------------------------
    {
      "DownstreamPathTemplate": "/api/cart/{userId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "cart-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/apigateway/cart/{userId}",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/cart/{userId}/item",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "cart-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/apigateway/cart/{userId}/item",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    }
  ],
